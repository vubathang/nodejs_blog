<div class="mt-4">
  <h3 class="text-center">Create course</h3>
  <form method="POST" action="/courses/store">
    <div class="input-group">
      <label for="name" class="input-group-text bg-primary text-white">Name</label>
      <input type="text" name="name" class="form-control">
    </div>
    <div class="input-group">
      <label for="description" class="input-group-text bg-primary text-white">Description</label>
      <input type="text" name="description" class="form-control">
    </div>
    <div class="text-center">
      <button class="btn">Submit</button>
    </div>
  </form>
</div>